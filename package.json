{
    "name": "server",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "engines": {
        "node": "18.x"
    },
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/apps/server/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/server/test/jest-e2e.json",
        "seed": "nest start --entryFile seeder",
        "seed:refresh": "nest start --entryFile seeder --refresh",
        "compose:up": "docker compose -f docker-compose.yaml up -d",
        "compose:down": "docker compose -f docker-compose.yaml down",
        "compose:restart": "yarn compose:down && yarn compose:up",
        "compose:up:ssl": "docker compose -f docker-compose.ssl.yaml up -d",
        "compose:down:ssl": "docker compose -f docker-compose.ssl.yaml down",
        "compose:restart:ssl": "yarn compose:down:ssl && yarn compose:up:ssl",
        "compose:up:infra": "docker compose -f docker-compose.infra.yaml up -d",
        "compose:down:infra": "docker compose -f docker-compose.infra.yaml down",
        "compose:restart:infra": "yarn compose:down:infra && yarn compose:up:infra"
    },
