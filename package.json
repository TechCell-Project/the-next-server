        "node-clipboardy": "^1.0.3",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3",
        "webpack": "^5.91.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/libs/",
            "<rootDir>/apps/"
        ],
        "moduleNameMapper": {
            "^~/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
            "^~/common(|/.*)$": "<rootDir>/libs/common/src/$1",
            "^~/casl(|/.*)$": "<rootDir>/libs/casl/src/$1",
            "^~/third-party(|/.*)$": "<rootDir>/libs/third-party/src/$1"
        }
    },
    "packageManager": "yarn@4.1.1"
}
