        "@types/amqplib": "^0",
        "@types/bcryptjs": "^2.4.6",
        "@types/express": "^4.17.17",
        "@types/facebook-js-sdk": "^3.3.10",
        "@types/jest": "^29.5.2",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.3.1",
        "@types/nodemailer": "^6.4.14",
        "@types/passport-anonymous": "^1.0.5",
