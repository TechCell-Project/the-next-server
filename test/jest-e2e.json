{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "~/logger/(.*)": "<rootDir>/../libs/logger/src/$1",
        "~/logger": "<rootDir>/../libs/logger/src",
        "~/common/(.*)": "<rootDir>/../libs/common/src/$1",
        "~/common": "<rootDir>/../libs/common/src",
        "~/casl/(.*)": "<rootDir>/../libs/casl/src/$1",
        "~/casl": "<rootDir>/../libs/casl/src"
    }
}
